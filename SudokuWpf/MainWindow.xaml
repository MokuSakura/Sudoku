<Window x:Class="SudokuWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SudokuWpf"
        xmlns:controls="clr-namespace:SudokuWpf.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="18">
    <Window.Style>
        <Style TargetType="Window" BasedOn="{StaticResource {x:Type Window}}"></Style>
    </Window.Style>
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <TextBlock>This is reserved for menu bar.</TextBlock>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical" Width="200">
                <Button>Game1</Button>
                <Button>Game2</Button>
                <Button>Game114514</Button>
            </StackPanel>
            <controls:GameBoardView GameBoardSizeX="3" GameBoardSizeY="3">
            </controls:GameBoardView>
        </StackPanel>
    </StackPanel>
</Window>